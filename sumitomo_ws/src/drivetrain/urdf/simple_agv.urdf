<?xml version="1.0"?> 
<!-- ===== Initial differential robot URDF =====-->
<!-- Note: This is only for testing pourpuses of the
CAN communication programs we develop.-->


<robot name="simple_agv">
    
    <!-- === Link declaration === -->

    <!-- Base link -->
    <link name="world_link">
        <pose>0 0 0 0 0 0</pose>
    </link>

    <!-- I'll use chassis as my root link-->    
    <link name="chassis">
        <visual>
            <geometry>
                <box size="0.65 0.5 0.3"/>
            </geometry>
            <origin xyz="0 0 0.3"/>
            <material name="white">
                <color rgba="0 0 1 1"/>
            </material>
        </visual>
    </link>
    <!-- Simple link definition-->
    <link name="wheel_r">
        <visual>
            <geometry>
                <cylinder length="0.10" radius="0.15"/>
            </geometry>
            <origin rpy="1.57 0 0" xyz="0 0.25 0.15"/>
            <material name="black">
                <color rgba="0 0 0 1"/>
            </material>
        </visual>
    </link>

    <link name="wheel_l">
        <visual>
            <geometry>
                <cylinder length="0.10" radius="0.15"/>
            </geometry>
            <!-- Note: The origin is defined in the link frame-->
            <origin rpy="1.57 0 0" xyz="0 -0.25 0.15"/>
            <material name="black">
                <color rgba="0 0 0 1"/>
            </material>
        </visual>
    </link>
    <!--TODO: Add example from xacro-->
    

    <!-- === Joint definition === -->

    <!-- Reference frame -->
    <joint name="world_link_to_chassis" type="fixed">
        <parent link="world_link"/>
        <child link="chassis"/>
    </joint>

    <!-- Wheels -->
    <joint name="joint1" type="revolute">
        <parent link="chassis"/>
        <child link="wheel_r"/>

        <origin xyz="5 3 0"/>
        <!-- Axis rotation-->
        <axis xyz="1 0 0" rpy="0 0 0"/>
        <!-- Joint limits (Newtons) (rad/s)-->
        <limit effort="50" velocity="20"/>
    </joint>
    
    <joint name="joint2" type="revolute">
        <parent link="chassis"/>
        <child link="wheel_l"/>
        
        <origin xyz="-2 5 0"/>
        <axis xyz="1 0 0" rpy="0 0 0"/>
        <limit effort="50" velocity="20"/>
    </joint>
    
    <!-- === Transmission === -->

  </robot>